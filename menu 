-- ===== SISTEMA DE ABAS =====
local Tabs = {}
local CurrentTab = nil

local function CreateTab(tabName)
    local Button = Instance.new("TextButton")
    Button.Size = UDim2.new(1,0,0,35)
    Button.Text = tabName
    Button.BackgroundColor3 = Config.Colors.Title
    Button.TextColor3 = Color3.fromRGB(255,255,255)
    Button.Font = Enum.Font.GothamBold
    Button.TextSize = 16
    Button.Parent = TabFrame

    local TabContent = Instance.new("ScrollingFrame")
    TabContent.Size = UDim2.new(1,0,1,0)
    TabContent.Visible = false
    TabContent.BackgroundTransparency = 1
    TabContent.Parent = ContentFrame

    local Layout = Instance.new("UIListLayout")
    Layout.Padding = UDim.new(0,8)
    Layout.Parent = TabContent

    Tabs[tabName] = TabContent

    Button.MouseButton1Click:Connect(function()
        if CurrentTab then CurrentTab.Visible = false end
        TabContent.Visible = true
        CurrentTab = TabContent
    end)
end

-- ===== FUN√á√ÉO PARA CRIAR BOT√ïES COM SCRIPT =====
local function CreateButton(tabName, text, func)
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(1,-10,0,40)
    Btn.BackgroundColor3 = Config.Colors.Button
    Btn.TextColor3 = Color3.fromRGB(255,255,255)
    Btn.Font = Enum.Font.GothamBold
    Btn.TextSize = 18
    Btn.Text = text
    Btn.Parent = Tabs[tabName]

    Btn.MouseEnter:Connect(function()
        Btn.BackgroundColor3 = Config.Colors.ButtonHover
    end)
    Btn.MouseLeave:Connect(function()
        Btn.BackgroundColor3 = Config.Colors.Button
    end)

    Btn.MouseButton1Click:Connect(func)
end

-- ===== FUN√á√ïES DE FACILIDADE =====
function AddTab(name)
    CreateTab(name)
end

function AddButtonToTab(tabName,text,func)
    CreateButton(tabName,text,func)
end

function RemoveButton(tabName,btnText)
    if Tabs[tabName] then
        for _,btn in pairs(Tabs[tabName]:GetChildren()) do
            if btn:IsA("TextButton") and btn.Text == btnText then
                btn:Destroy()
            end
        end
    end
end

-- ===== BOT√ÉO MOVEL ABRIR/FECHAR =====
local OpenCloseBtn = Instance.new("TextButton")
OpenCloseBtn.Size = UDim2.new(0,50,0,50)
OpenCloseBtn.Position = UDim2.new(0,20,0,300)
OpenCloseBtn.BackgroundColor3 = Config.Colors.BtnOpen
OpenCloseBtn.TextColor3 = Color3.fromRGB(255,255,255)
OpenCloseBtn.Font = Enum.Font.GothamBold
OpenCloseBtn.TextSize = 20
OpenCloseBtn.Text = Config.EmojiOpen
OpenCloseBtn.Parent = ScreenGui

local BtnCorner = Instance.new("UICorner")
BtnCorner.CornerRadius = UDim.new(0,15)
BtnCorner.Parent = OpenCloseBtn

OpenCloseBtn.Active = true
OpenCloseBtn.Draggable = true

local MenuOpen = true
OpenCloseBtn.MouseButton1Click:Connect(function()
    MenuOpen = not MenuOpen
    MainFrame.Visible = MenuOpen
    OpenCloseBtn.Text = MenuOpen and Config.EmojiOpen or Config.EmojiClosed
end)

