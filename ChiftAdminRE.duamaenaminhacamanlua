-- Bot√£o para spawnar boneco grande
local spawnBtn = Instance.new("TextButton", frame)
spawnBtn.Size = UDim2.new(0, 150, 0, 28)
spawnBtn.Position = UDim2.new(0.5, -75, 1, -36)
spawnBtn.AnchorPoint = Vector2.new(0.5,0)
spawnBtn.Text = "Spawnar boneco grande"
spawnBtn.Font = Enum.Font.GothamBold
spawnBtn.TextSize = 14
spawnBtn.BackgroundColor3 = Color3.fromRGB(90,20,180)
Instance.new("UICorner", spawnBtn).CornerRadius = UDim.new(0,6)

-- fun√ß√£o de envio que usa SayMessageRequest se dispon√≠vel
local function sendMessage(msg)
    if not msg or msg:match("^%s*$") then return end
    if SayMessageRequest and type(SayMessageRequest.FireServer) == "function" then
        pcall(function()
            SayMessageRequest:FireServer(msg, "All")
        end)
    else
        -- fallback: aviso local
        warn("SayMessageRequest indispon√≠vel ‚Äî n√£o foi poss√≠vel enviar para todos.")
    end
end

sendBtn.MouseButton1Click:Connect(function()
    sendMessage(textBox.Text)
    textBox.Text = ""
end)

textBox.FocusLost:Connect(function(enter)
    if enter then
        sendMessage(textBox.Text)
        textBox.Text = ""
    end
end)

clearBtn.MouseButton1Click:Connect(function() textBox.Text = "" end)

-- fun√ß√£o para criar um "boneco grande" simples com decal nas faces do head
local function spawnBigDummy(decalId)
    -- remove dummy anterior se existir
    for _, v in ipairs(Workspace:GetChildren()) do
        if v:IsA("Model") and v.Name == "Tubers93_BigDummy" then
            v:Destroy()
        end
    end

    local model = Instance.new("Model")
    model.Name = "Tubers93_BigDummy"
    model.Parent = Workspace

    -- posi√ß√£o de spawn: um pouco √† frente do jogador (se existir)
    local spawnPos = Vector3.new(0, 5, 0)
    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        local hrp = player.Character.HumanoidRootPart
        spawnPos = hrp.Position + (hrp.CFrame.LookVector * 8) + Vector3.new(0, 0, 0)
    elseif Workspace:FindFirstChild("SpawnLocation") then
        spawnPos = Workspace.SpawnLocation.Position + Vector3.new(0,5,0)
    end

    -- cria um "head" grande (part)
    local head = Instance.new("Part")
    head.Name = "Head"
    head.Size = Vector3.new(8,8,8) -- bem grande
    head.Position = spawnPos + Vector3.new(0, 4, 0)
    head.Anchored = true
    head.CanCollide = false
    head.Parent = model

    -- aplica decal nas faces (usa o id informado)
    local faces = {Enum.NormalId.Front, Enum.NormalId.Back, Enum.NormalId.Left, Enum.NormalId.Right, Enum.NormalId.Top, Enum.NormalId.Bottom}
    for _, face in ipairs(faces) do
        local dec = Instance.new("Decal")
        dec.Face = face
        dec.Texture = "rbxassetid://" .. tostring(decalId)
        dec.Parent = head
    end

    -- cria torso simples (opcional)
    local torso = Instance.new("Part")
    torso.Name = "Torso"
    torso.Size = Vector3.new(6,8,3)
    torso.Position = head.Position + Vector3.new(0, -6, 0)
    torso.Anchored = true
    torso.CanCollide = false
    torso.Parent = model

    -- humanoid (s√≥ pra aparecer nome se quiser)
    local humanoid = Instance.new("Humanoid")
    humanoid.Name = "Humanoid"
    humanoid.Parent = model

    model.PrimaryPart = head
    model:SetPrimaryPartCFrame(CFrame.new(head.Position))

    return model
end

-- ID do decal que o usu√°rio pediu
local decalId = 98559512374869

spawnBtn.MouseButton1Click:Connect(function()
    spawnBigDummy(decalId)
end)

-- dica
local tip = Instance.new("TextLabel", frame)
tip.Size = UDim2.new(1, -16, 0, 16)
tip.Position = UDim2.new(0,8,1,-16)
tip.BackgroundTransparency = 1
tip.Text = "Envio via sistema padr√£o de chat. Boneco criado localmente no workspace."
tip.Font = Enum.Font.Gotham
tip.TextSize = 12
tip.TextColor3 = Color3.fromRGB(160,180,200)