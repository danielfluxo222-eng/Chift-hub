-- ===== SISTEMA DE ABAS =====
local Tabs = {}
local CurrentTab = nil

local function CreateTab(tabName)
    local TabBtn = Instance.new("TextButton")
    TabBtn.Size = UDim2.new(1, -10, 0, 35)
    TabBtn.Text = tabName
    TabBtn.BackgroundColor3 = Config.ButtonColor
    TabBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    TabBtn.Font = Enum.Font.GothamBold
    TabBtn.TextSize = 16
    TabBtn.Parent = TabFrame

    TabBtn.MouseEnter:Connect(function()
        TabBtn.BackgroundColor3 = Config.ButtonHover
    end)
    TabBtn.MouseLeave:Connect(function()
        TabBtn.BackgroundColor3 = Config.ButtonColor
    end)

    local TabContent = Instance.new("ScrollingFrame")
    TabContent.Size = UDim2.new(1, 0, 1, 0)
    TabContent.Visible = false
    TabContent.BackgroundTransparency = 1
    TabContent.CanvasSize = UDim2.new(0, 0, 2, 0)
    TabContent.Parent = ContentFrame

    local Layout = Instance.new("UIListLayout")
    Layout.Padding = UDim.new(0, 8)
    Layout.Parent = TabContent

    Tabs[tabName] = TabContent

    TabBtn.MouseButton1Click:Connect(function()
        if CurrentTab then CurrentTab.Visible = false end
        TabContent.Visible = true
        CurrentTab = TabContent
    end)
end

-- ===== BOT√ïES DAS FUN√á√ïES =====
local function CreateButton(tabName, text, func)
    if not Tabs[tabName] then return end
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(1, -15, 0, 40)
    Btn.BackgroundColor3 = Config.ButtonColor
    Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    Btn.Font = Enum.Font.GothamBold
    Btn.TextSize = 18
    Btn.Text = text
    Btn.Parent = Tabs[tabName]

    Btn.MouseEnter:Connect(function()
        Btn.BackgroundColor3 = Config.ButtonHover
    end)
    Btn.MouseLeave:Connect(function()
        Btn.BackgroundColor3 = Config.ButtonColor
    end)

    Btn.MouseButton1Click:Connect(func)
end

-- ===== BOT√ÉO ABRIR / FECHAR =====
local OpenCloseBtn = Instance.new("TextButton")
OpenCloseBtn.Size = UDim2.new(0, 60, 0, 60)
OpenCloseBtn.Position = UDim2.new(0, 25, 0, 250)
OpenCloseBtn.BackgroundColor3 = Config.BtnOpenColor
OpenCloseBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
OpenCloseBtn.Font = Enum.Font.GothamBold
OpenCloseBtn.TextSize = 26
OpenCloseBtn.Text = Config.EmojiOpen
OpenCloseBtn.Parent = ScreenGui
OpenCloseBtn.Active = true
OpenCloseBtn.Draggable = true

local BtnCorner = Instance.new("UICorner")
BtnCorner.CornerRadius = UDim.new(0, 15)
BtnCorner.Parent = OpenCloseBtn

local aberto = true
OpenCloseBtn.MouseButton1Click:Connect(function()
    aberto = not aberto
    MainFrame.Visible = aberto
    OpenCloseBtn.Text = aberto and Config.EmojiOpen or Config.EmojiClosed
end)

