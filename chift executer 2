local Players = game:GetService("Players")
local SoundService = game:GetService("SoundService")
local player = Players.LocalPlayer

-- Fun√ß√£o de input da key
local function requestKey()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = game.CoreGui
    ScreenGui.Name = "KeyGui"

    local Frame = Instance.new("Frame")
    Frame.Parent = ScreenGui
    Frame.Size = UDim2.new(0,400,0,150)
    Frame.Position = UDim2.new(0.3,0,0.4,0)
    Frame.BackgroundColor3 = Color3.fromRGB(0,0,0)
    Frame.Active = true
    Frame.Draggable = true

    local UIStroke = Instance.new("UIStroke")
    UIStroke.Thickness = 2
    UIStroke.Color = Color3.fromRGB(0,170,255)
    UIStroke.Parent = Frame

    local TextLabel = Instance.new("TextLabel")
    TextLabel.Parent = Frame
    TextLabel.Size = UDim2.new(1,0,0,50)
    TextLabel.Position = UDim2.new(0,0,0,0)
    TextLabel.Text = "üé© Chift Executer Key"
    TextLabel.Font = Enum.Font.GothamBold
    TextLabel.TextSize = 22
    TextLabel.TextColor3 = Color3.fromRGB(0,170,255)
    TextLabel.BackgroundTransparency = 1

    local TextBox = Instance.new("TextBox")
    TextBox.Parent = Frame
    TextBox.Size = UDim2.new(0.9,0,0,40)
    TextBox.Position = UDim2.new(0.05,0,0.4,0)
    TextBox.PlaceholderText = "Digite a key aqui"
    TextBox.TextColor3 = Color3.fromRGB(0,170,255)
    TextBox.BackgroundColor3 = Color3.fromRGB(15,15,15)
    TextBox.Font = Enum.Font.Code
    TextBox.TextSize = 18
    TextBox.ClearTextOnFocus = false

    local Button = Instance.new("TextButton")
    Button.Parent = Frame
    Button.Size = UDim2.new(0.9,0,0,40)
    Button.Position = UDim2.new(0.05,0,0.75,0)
    Button.BackgroundColor3 = Color3.fromRGB(0,85,170)
    Button.Font = Enum.Font.GothamBold
    Button.TextSize = 18
    Button.TextColor3 = Color3.fromRGB(255,255,255)
    Button.Text = "‚úÖ Verificar Key"

    local success = false
    Button.MouseButton1Click:Connect(function()
        if TextBox.Text == "frekeychiftexeccuter299" then
            success = true
            ScreenGui:Destroy()
            -- Carrega o restante do Chift Executer
            loadstring(game:HttpGet("https://raw.githubusercontent.com/danielfluxo222-eng/Chift-hub/main/chift%20executer"))()
        else
            TextLabel.Text = "‚ùå Key incorreta!"
            TextLabel.TextColor3 = Color3.fromRGB(255,0,0)
        end
    end)
end

-- Inicia a verifica√ß√£o de key
requestKey()