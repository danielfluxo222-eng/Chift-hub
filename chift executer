local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local TextBox = Instance.new("TextBox")
local Execute = Instance.new("TextButton")
local Clear = Instance.new("TextButton")
local ToggleButton = Instance.new("TextButton")

ScreenGui.Name = "ChiftExecuter"
ScreenGui.Parent = game.CoreGui
ScreenGui.ResetOnSpawn = false

-- Painel Principal
Frame.Name = "Main"
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Frame.BorderSizePixel = 0
Frame.Position = UDim2.new(0.3, 0, 0.3, 0)
Frame.Size = UDim2.new(0, 400, 0, 260)
Frame.Active = true
Frame.Draggable = true
Frame.Visible = true

-- Efeito neon azul
local UIStroke = Instance.new("UIStroke")
UIStroke.Color = Color3.fromRGB(0, 170, 255)
UIStroke.Thickness = 2.3
UIStroke.Parent = Frame

-- TÃ­tulo
Title.Name = "Title"
Title.Parent = Frame
Title.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Title.BorderSizePixel = 0
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Font = Enum.Font.GothamBold
Title.Text = "ðŸŽ© CHIFT EXECUTER ðŸŽ©"
Title.TextColor3 = Color3.fromRGB(0, 170, 255)
Title.TextSize = 22
Title.TextStrokeTransparency = 0

-- Caixa de Texto
TextBox.Name = "ScriptBox"
TextBox.Parent = Frame
TextBox.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
TextBox.Position = UDim2.new(0.05, 0, 0.2, 0)
TextBox.Size = UDim2.new(0.9, 0, 0.55, 0)
TextBox.Font = Enum.Font.Code
TextBox.PlaceholderText = "-- Cole seu script aqui"
TextBox.Text = ""
TextBox.TextColor3 = Color3.fromRGB(0, 170, 255)
TextBox.TextSize = 16
TextBox.TextXAlignment = Enum.TextXAlignment.Left
TextBox.TextYAlignment = Enum.TextYAlignment.Top
TextBox.MultiLine = true
TextBox.ClearTextOnFocus = false

-- BotÃ£o Executar
Execute.Name = "Execute"
Execute.Parent = Frame
Execute.BackgroundColor3 = Color3.fromRGB(0, 85, 170)
Execute.Position = UDim2.new(0.05, 0, 0.8, 0)
Execute.Size = UDim2.new(0.42, 0, 0.15, 0)
Execute.Font = Enum.Font.GothamBold
Execute.Text = "â–¶ EXECUTAR"
Execute.TextColor3 = Color3.fromRGB(255, 255, 255)
Execute.TextSize = 18
Execute.MouseButton1Click:Connect(function()
    local code = TextBox.Text
    if code and code ~= "" then
        loadstring(code)()
    end
end)

-- BotÃ£o Limpar
Clear.Name = "Clear"
Clear.Parent = Frame
Clear.BackgroundColor3 = Color3.fromRGB(0, 85, 170)
Clear.Position = UDim2.new(0.53, 0, 0.8, 0)
Clear.Size = UDim2.new(0.42, 0, 0.15, 0)
Clear.Font = Enum.Font.GothamBold
Clear.Text = "ðŸ§¹ LIMPAR"
Clear.TextColor3 = Color3.fromRGB(255, 255, 255)
Clear.TextSize = 18
Clear.MouseButton1Click:Connect(function()
    TextBox.Text = ""
end)

-- ðŸŽ© BotÃ£o de Abrir/Fechar
ToggleButton.Name = "Toggle"
ToggleButton.Parent = ScreenGui
ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 85, 170)
ToggleButton.Size = UDim2.new(0, 50, 0, 50)
ToggleButton.Position = UDim2.new(0.9, 0, 0.1, 0)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.Text = "ðŸŽ©"
ToggleButton.TextSize = 22
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Active = true
ToggleButton.Draggable = true

-- Sistema de abrir/fechar ðŸŽ©ðŸ”’
local aberto = true
ToggleButton.MouseButton1Click:Connect(function()
	aberto = not aberto
	if aberto then
		Frame.Visible = true
		ToggleButton.Text = "ðŸŽ©"
	else
		Frame.Visible = false
		ToggleButton.Text = "ðŸŽ©ðŸ”’"
	end
end)

-- Bordas arredondadas
for _, v in pairs({Frame, Execute, Clear, TextBox, ToggleButton}) do
	local UICorner = Instance.new("UICorner")
	UICorner.CornerRadius = UDim.new(0, 8)
	UICorner.Parent = v
end

-- Sombra Neon
